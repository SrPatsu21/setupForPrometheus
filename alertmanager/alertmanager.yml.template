global:
  smtp_smarthost: '${ALERT_SMTP_SERVER}'
  smtp_from: '${ALERT_SMTP_FROM}'
  smtp_auth_username: '${ALERT_SMTP_USER}'
  smtp_auth_password: '${ALERT_SMTP_PASS}'
  smtp_require_tls: true

route:
  receiver: 'email-padrao'

receivers:
  - name: 'email-padrao'
    email_configs:
      - to: '${ALERT_EMAIL_TO}'
        send_resolved: true
